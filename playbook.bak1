---
- hosts: all
  name: Simple nginx example Vagrant Ansible Local
  become: yes

  tasks:

  - name: Update apt cache
    apt:
       update_cache: yes

  - name: Install nginx
    apt:
      name: nginx
      state: present

  - name: Insert Index Page
    template:
      src: index.html
      dest: /usr/share/nginx/html/index.html

  - name: Start NGiNX
    service:
      name: nginx
      state: started

